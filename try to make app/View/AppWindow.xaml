<UserControl x:Class="try_to_make_app.View.AppWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:try_to_make_app.View"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="600">
    <Grid Background="DarkSlateGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Fill="DarkGray" RadiusX="10" RadiusY="10"
                           Margin="2" />
                <TextBlock Grid.Column="0" Grid.Row="2" Text="{Binding Path=AppName}" HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                <Button Grid.Row="0" Margin="10" Content="Назад" Command="{Binding BackToAppsViewCommand}" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3" Fill="DarkGray"
                           RadiusX="10" RadiusY="10" Margin="2" />
                <TextBox Grid.Column="2" Grid.Row="1" Margin="4" Text="{Binding AllowedTimeHour}" FontSize="15"
                         LostKeyboardFocus="TextBox_TextChanged" Name="TextBoxHours"/>
                <TextBlock Grid.Row="1" Grid.Column="0"  Text="Ч:" HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3" Fill="DarkGray"
                           RadiusX="10" RadiusY="10" Margin="2" />
                <TextBox Grid.Column="2" Grid.Row="1" Margin="4" Text="{Binding AllowedTimeMinute}"
                         LostKeyboardFocus="TextBox_TextChanged" Name="TextBoxMinute"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Мин:" HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Grid>
            <Rectangle Grid.Row="0" Grid.Column="1" Fill="DarkGray" RadiusX="10" RadiusY="10" Margin="2" />
            <TextBlock Grid.Column="1" Grid.Row="0" Text="Ограничение" HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Grid>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
            <local:CustomButon  RotationAngel="0.0" Command="{Binding PreviusDayCommand}"/>
            <local:HorizontallyChart Grid.Column="1" Values="{Binding WeekUsadgeTime}" />
            <local:CustomButon Grid.Column="2" RotationAngel="180.0" Command="{Binding PreviusDayCommand}"/>
        </Grid>
    </Grid>
</UserControl>